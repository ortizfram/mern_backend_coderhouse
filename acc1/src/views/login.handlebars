<script>
  function submitForm() { const email = document.getElementById("email").value;
  const password = document.getElementById("password").value;
  fetch("/api/sessions/login", { method: "POST", headers: { "Content-Type":
  "application/json" }, body: JSON.stringify({ email,password}), })
  .then((response) => { if (response.ok) { console.log("logged-in and Cookie
  creada correctamente"); window.location.href = "/api/products" } else {
  console.error("Error al crear la cookie"); } }) .catch((error) =>
  console.error("Error:", error)); }
</script>